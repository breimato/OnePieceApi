# Copia este archivo como application.properties y rellena las credenciales/locales
# Nunca commitees application.properties con datos sensibles

# Datasource
spring.datasource.url=jdbc:postgresql://localhost:5432/onepiece_db
spring.datasource.username=${DB_USERNAME:postgres}
spring.datasource.password=${DB_PASSWORD:changeme}
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false

